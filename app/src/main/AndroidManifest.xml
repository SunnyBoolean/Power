<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ui.geo.com.power" >

    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="ANDROID.PERMISSION.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="ANDROID.PERMISSION.CAMERA"/>

    <!-- 联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.geo.power.ui.PowerApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.geo.power.ui.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.geo.power.ui.activity.MDTextInputLayoutLoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="MaterialDesign"/>
        <activity android:name="com.geo.power.ui.activity.RecycleViewActivity"
            android:label="RecycleView"/>
        <activity android:name="com.geo.power.ui.activity.MaterialDesignGit"/>
        <activity android:name="com.geo.power.ui.activity.MyPlanActivity"
            android:label="我的计划"/>
        <activity android:name="com.geo.power.ui.activity.SettingActivity"
            android:label="设置"/>
        <activity android:name="com.geo.power.ui.activity.AboutActivity"
            android:label="关于"/>
        <activity android:name="com.geo.power.ui.activity.ImageShowActivity"/>
        <activity android:name="com.geo.power.ui.activity.SearchActivity"
            android:label="搜索"/>
        <activity android:name="com.geo.power.ui.activity.MyPlanDetailActivity"
            android:label="我的计划详情"/>
        <activity android:name="com.geo.power.ui.activity.AddPlanActivity"
            android:label="添加计划"></activity>
    </application>

</manifest>
