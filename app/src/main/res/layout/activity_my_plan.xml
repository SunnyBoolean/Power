<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/myplan_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_teal_400"
        app:tabIndicatorColor="@color/material_white"
        app:tabSelectedTextColor="@color/material_white"
        app:tabTextColor="@color/material_white"
        app:tabIndicatorHeight="4dp"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/myplan_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
