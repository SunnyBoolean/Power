<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/search_tool_bar" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal">
    <!--搜索的历史记录，只记录十条数据-->
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@color/material_textWhite_dividers"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="历史纪录"
        android:paddingRight="10dp"
        android:textSize="@dimen/textSize_normal" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:src="@drawable/search_history_delete"/>
</LinearLayout>


    <include layout="@layout/divier"></include>

    <ListView
        android:id="@+id/search_history_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_white"
         />
</LinearLayout>
