<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/material_grey_200"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/tool_bar"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_white"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/discover_plan_uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="炭灰思学Sunny"
                    android:textSize="@dimen/textSize_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableLeft="@drawable/dreamdone_locationicon"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="湖北武汉光谷新天地"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/material_white"
                    android:padding="10dp"
                    android:text="        这就是所谓的那个莎莎也iom，我并不知道UI怎么设计，但是一样会尽全力把他做出来"
                    android:textSize="@dimen/textSize_normal" />

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/home_convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    app:canLoop="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_200" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/material_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:background="@color/add_longplan_item_selec"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="动态 (30)" />

                    <View
                        android:layout_width="0.55dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/material_grey_200" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@color/add_longplan_item_selec"
                        android:gravity="center"
                        android:text="参与者 (286)" />

                    <View
                        android:layout_width="0.55dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/material_grey_200" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@color/add_longplan_item_selec"
                        android:gravity="center"
                        android:text="鼓励 (56)" />

                    <View
                        android:layout_width="0.55dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/material_grey_200" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:background="@color/add_longplan_item_selec"
                        android:gravity="center"
                        android:text="我要参与" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/material_grey_200" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="创建时间：2016-05-31"
                    android:textSize="@dimen/textSize_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/material_grey_200" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="截止时间：2016-10-31"
                    android:textSize="@dimen/textSize_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/material_grey_200" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="8dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="完成进度：90%"
                    android:textSize="@dimen/textSize_normal" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/material_grey_200" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/material_grey_200"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:padding="10dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@color/material_white"
            android:hint="来了就鼓励下他呗..."
            android:paddingLeft="5dp" />

        <Button
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:text="发送" />
    </LinearLayout>

</LinearLayout>
