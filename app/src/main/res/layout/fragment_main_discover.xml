<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/home_plan_tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/material_white"
        app:tabIndicatorColor="@color/material_teal_800"
        app:tabSelectedTextColor="@color/material_teal_800"
        app:tabTextColor="@color/material_blueGrey_800"
        app:tabIndicatorHeight="2dp"
        />
  <include layout="@layout/divier"></include>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_plan_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
