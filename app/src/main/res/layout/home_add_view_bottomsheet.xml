<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_white"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/home_addplan_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|right"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/selector_home_add_close"></ImageButton>


    <TextView
        android:id="@+id/home_addplan_cqjh"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplan_longplan"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="长期计划"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/material_grey_400" />


    <TextView
        android:id="@+id/home_addplan_xgbz"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplanlong_bizhi"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="习惯壁纸"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/material_grey_400" />

    <TextView
        android:id="@+id/home_addplan_xyjy"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplanlong_xinyuan"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="心愿寄语"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/material_grey_400" />

    <TextView
        android:id="@+id/home_addplan_sxbj"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplanlong_note"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="随想笔记"
        android:textSize="@dimen/textSize_normal" />

</LinearLayout>