<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_addplan_cqjh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplan_longplan"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="我的计划"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="gone"
        android:background="@color/material_grey_400" />

    <TextView
        android:id="@+id/home_addplan_xyjy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplanlong_xinyuan"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="心愿瓶子"
        android:textSize="@dimen/textSize_normal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="gone"
        android:background="@color/material_grey_400" />


    <TextView
        android:id="@+id/home_addplan_xgbz"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplanlong_bizhi"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="桌面提醒"
        android:textSize="@dimen/textSize_normal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="gone"
        android:background="@color/material_grey_400" />

    <TextView
        android:id="@+id/home_addplan_sxbj"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/home_addplanlong_note"
        android:visibility="gone"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="随想笔记"
        android:textSize="@dimen/textSize_normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey_400" />
    <TextView
        android:id="@+id/home_addplan_close"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/add_longplan_item_selec"
        android:drawableLeft="@drawable/selector_home_add_close"
        android:drawablePadding="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="取消"
        android:textSize="@dimen/textSize_large" />


</LinearLayout>