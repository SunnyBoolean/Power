<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/material_teal_500"
    android:orientation="vertical">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_addplan_close"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/selector_home_add_close"></ImageButton>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/home_addplan_cqjh"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:text="长期计划"

            android:textColor="@color/material_white"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/material_grey_500" />

        <Button
            android:id="@+id/home_addplan_xgbz"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:text="习惯壁纸"
            android:textColor="@color/material_white"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/material_grey_500" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:id="@+id/home_addplan_xyjy"
            android:text="心愿寄语"
            android:textColor="@color/material_white"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/material_grey_500" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@null"
            android:id="@+id/home_addplan_sxbj"
            android:text="随想笔记"
            android:textColor="@color/material_white"
            android:textSize="@dimen/textSize_normal" />
    </LinearLayout>

</LinearLayout>