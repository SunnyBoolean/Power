<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white"
    android:orientation="vertical">

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_life"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="生活"
        android:textColor="@color/material_teal_800"
        app:v_styleId="@array/button_flat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey_400" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_sport"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="运动"
        android:textColor="@color/material_teal_800"
        app:v_styleId="@array/button_flat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey_400" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_knowledge"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="学习"
        android:textColor="@color/material_teal_800"
        app:v_styleId="@array/button_flat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_grey_400" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_work"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="工作"
        android:textColor="@color/material_teal_800"
        app:v_styleId="@array/button_flat" />
</LinearLayout>
