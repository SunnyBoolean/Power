<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_teal_800"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_teal_900" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_life"
        style="@style/LightFlatWaveButtonRippleStyle_HomeOrder"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/access_time"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="时间最新"
        android:textColor="@color/material_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_teal_900" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_sport"
        style="@style/LightFlatWaveButtonRippleStyle_HomeOrder"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/people_outline"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="参与最多"
        android:textColor="@color/material_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_teal_900" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_hoadone"
        style="@style/LightFlatWaveButtonRippleStyle_HomeOrder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/event_available"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="执行最多"
        android:textColor="@color/material_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_teal_900" />

    <com.rey.material.widget.Button
        android:id="@+id/main_home_category_item_knowledge"
        style="@style/LightFlatWaveButtonRippleStyle_HomeOrder"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:drawableLeft="@drawable/done_all"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="已完成"
        android:textColor="@color/material_white" />
</LinearLayout>
