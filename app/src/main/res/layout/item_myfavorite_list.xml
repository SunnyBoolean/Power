<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/material_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/home_myplan_item_tag_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:src="@drawable/list_homeplan_userimg" />

        <TextView
            android:id="@+id/home_myplan_item_sigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/home_myplan_item_tag_p"
            android:text="泼墨"
            android:textColor="@color/material_grey_600"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:text="2016/05/13"
            android:textColor="@color/material_grey_500"
            android:textSize="@dimen/textSize_small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:paddingLeft="18dp"
            android:src="@drawable/favoriote_logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/home_myplan_item_tag_p"
            android:layout_toRightOf="@id/home_myplan_item_tag_p"
            android:layout_weight="1"
            android:background="@color/material_white"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:paddingBottom="20dp"
            android:paddingLeft="8dp"
            android:paddingTop="15dp"
            android:text="   网易汽车6月20日报道 据纳斯达克网站报道，彭博社援引知情人士的消息撰文报道称，德国汽车制造商大众汽车将在本月递交一项规模为100亿美元的和解方案，用于解决50万辆汽车尾气排放欺诈的问题，或禁止这些车在美国道路上行驶，即便大众汽车目前仍在等待监管当局将如何对这些车辆进行改造的消息。"
            android:textColor="@color/material_textBlack_secondaryText"
            android:textSize="@dimen/textSize_normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/material_grey_100" />
</LinearLayout>
