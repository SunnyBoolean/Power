<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user_profile_sex"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_large"
                android:text="性别" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:id="@+id/user_profile_sex"
                android:textSize="@dimen/textSize_large"
                android:gravity="center_vertical"
                android:text="男" />
        </RelativeLayout>
        <include layout="@layout/divier" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user_profile_sex"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_large"
                android:text="年龄" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:id="@+id/user_profile_age"
                android:textSize="@dimen/textSize_large"
                android:gravity="center_vertical"
                android:text="23" />
        </RelativeLayout>
        <include layout="@layout/divier" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user_profile_nengl"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_large"
                android:text="能量值" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:textSize="@dimen/textSize_large"
                android:id="@+id/user_profile_nlz"
                android:gravity="center_vertical"
                android:text="1280" />
        </RelativeLayout>

        <include layout="@layout/divier" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user_profile_zhiye"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_large"
                android:text="职业" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:textSize="@dimen/textSize_large"
                android:id="@+id/user_profile_zy"
                android:gravity="center_vertical"
                android:text="程序员" />
        </RelativeLayout>
        <include layout="@layout/divier" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user_profile_createplan"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_large"
                android:text="创建计划" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:textSize="@dimen/textSize_large"
                android:gravity="center_vertical"
                android:id="@+id/user_profile_yjjh"
                android:text="123" />
        </RelativeLayout>
        <include layout="@layout/divier" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/user_profile_doneplan"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_large"
                android:text="完成计划" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:id="@+id/user_profile_ywcjh"
                android:drawablePadding="10dp"
                android:textSize="@dimen/textSize_large"
                android:gravity="center_vertical"
                android:text="56" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
