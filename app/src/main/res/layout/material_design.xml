<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/widget_space"
    android:paddingRight="@dimen/widget_space">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/materialdesign_inputtext_usernmame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_space"
        android:clickable="true"
        android:drawablePadding="@dimen/drawable_padding">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_input_username_selector"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="用户名"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/materialdesign_inputtext_passord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_space"
        android:clickable="true"
        android:drawablePadding="@dimen/drawable_padding">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/login_input_password_selector"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="密码"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_list_item_height"
        android:text="登录"
        android:textColor="@color/main_theme_color" />
</LinearLayout>

