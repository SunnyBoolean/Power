<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/material_grey_200" />

    <TextView
        android:id="@+id/personal_my_aim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/personal_aim"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="start"
        android:padding="12dp"
        android:text="我的计划"
        android:textColor="@color/material_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/material_grey_200" />

    <TextView
        android:id="@+id/personal_floow_aim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/personal_dianzan"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="start"
        android:padding="12dp"
        android:text="我的收藏"
        android:textColor="@color/material_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/material_grey_200" />

    <TextView
        android:id="@+id/personal_my_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/personal_mynote"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="start"
        android:padding="12dp"
        android:text="随想笔记"
        android:textColor="@color/material_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/material_grey_200" />

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/personal_msg"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="start"
        android:padding="12dp"
        android:text="消息"
        android:textColor="@color/material_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/material_grey_200" />

    <TextView
        android:id="@+id/asq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/personal_erweima"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="start"
        android:padding="12dp"
        android:text="分享二维码"
        android:textColor="@color/material_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/material_grey_200" />

    <TextView
        android:id="@+id/ds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/personal_yjfk"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="start"
        android:padding="12dp"
        android:text="意见反馈"
        android:textColor="@color/material_black" />

</LinearLayout>
